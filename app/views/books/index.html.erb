<main>
<div class="container px-5 px-sm-0">
  
<div class="row">
    <div class="col-md-3">

     <%= render 'books/create', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <br>
      <h2>Books</h2>
       <table class="table">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        </thead>
         <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <span><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg" %></span>
            </td>
            <td>
             <span><%= link_to "book.title", book_path(book.id) %></span>
            </td>
            <td> 
             <span><%= book.body %></span>
            </td>
          </tr>
         </tbody>
          <% end %>
      </table>
     
     </div>
    </div>
   </div>
  </div>
</main>