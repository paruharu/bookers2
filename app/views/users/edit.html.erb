<main>
  <p id="notice"></p>
   <div class="container">
    <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    
     <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
     <% end %>
      
    <h2>User info</h2>
     <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control name", placeholder:"名前"%>
      </div>
      <div class="form-group"> 
         <label for="user_image">Image</label>
         <%= f.attachment_field :profile_image, class:"form-control-file user_image", placeholder: "プロフィール画像" %>
      </div>
      
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class:"form-control introduction", type:"text" %>
      </div>
      
      <div class="form-group">
       <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
     <% end %>

     </div>
     </div>
   </div>
      
</main>